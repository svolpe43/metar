{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "removeComments": false,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "outDir": "build",
      "declaration": true,
      "lib": [
        "dom"
      ]
    },
    "compileOnSave": true,
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "build",
      "node_modules"
    ]
  }